<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.weight68kg.jetpackdemo.home.HomeFragment"
        android:label="Blank"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_homeFragment_to_personFragment"
            app:destination="@id/personFragment" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.weight68kg.jetpackdemo.list.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_personFragment"
            app:destination="@id/personFragment" />
        <action
            android:id="@+id/action_listFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>


    <fragment
        android:id="@+id/personFragment"
        android:name="com.weight68kg.jetpackdemo.person.PersonFragment"
        android:label="fragment_person"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_personFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_personFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
</navigation>